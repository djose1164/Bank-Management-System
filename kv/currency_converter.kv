#:kivy 1.11.1

<ConverterScreen>:
    BoxLayout:
        orientation: "vertical"
        padding: 20
        spacing: 20

        Label:
            text: "Converter Screen"
            size_hint_y: .2
            bold: True
            font_size: dp(26)

        BoxLayout:
            orientation: "vertical"
            padding: 20
            spacing: 20

            Button:
