#: kivy 1.11.1

<StatusLabelValue@Label>
    font_size: 24

<StatusLabelColum@StatusLabelValue>:
    color: .65, 0, 12, 8
    bold: True

<StatusScreen>:
    deposit_count: lbl_deposit_count
    loan_count: lbl_loan_count
    deposit_total: lbl_deposit_total
    loan_total: lbl_loan_total
    euros: lbl_euros
    dollars: lbl_dollars
    object: lbl_object

    BoxLayout:
        orientation: "vertical"
        spacing: 20
        padding: 20

        GridLayout:
            cols: 2

            StatusLabelColum:
                text: "deposit_count"
            StatusLabelValue:
                id: lbl_deposit_count

            StatusLabelColum:
                text: "loan_count"
            StatusLabelValue:
                id: lbl_loan_count

            StatusLabelColum:
                text: "deposit_total"
            StatusLabelValue:
                id: lbl_deposit_total

            StatusLabelColum:
                text: "loan_total"
            StatusLabelValue:
                id: lbl_loan_total

            StatusLabelColum:
                text: "euros"
            StatusLabelValue:
                id: lbl_euros

            StatusLabelColum:
                text: "dollars"
            StatusLabelValue:
                id: lbl_dollars

            StatusLabelColum:
                text: "object"
            StatusLabelValue:
                id: lbl_object
        
        
        Button:
            text: "Go back!"
            background_color: 1, 0, 0, .8
            size_hint: .75, .1
            pos_hint: {"center_x": .5}
            on_press: 
                app.root.current = "menu"

