#: kivy 1.11.1

<StatusScreen>
    GridLayout:
        cols: 2
        deposit_count: deposit_count
        loan_count: loan_count
        deposit_total: deposit_total
        loan_total: loan_total
        euros: euros
        dollars: dollars
        object: object

        Label:
            text: "deposit_count"
        Label:
            id: deposit_count

        Label:
            text: "loan_count"
        Label:
            id: loan_count

        Label:
            text: "deposit_total"
        Label:
            id: deposit_total

        Label:
            text: "loan_total"
        Label:
            id: loan_total

        Label:
            text: "euros"
        Label:
            id: euros

        Label:
            text: "dollars"
        Label:
            id: dollars

        Label:
            text: "object"
        Label:
            id: object

